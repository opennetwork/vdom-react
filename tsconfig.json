{
    "compilerOptions": {
        "module": "esnext",
        "lib": [
            "es2018",
            "esnext",
            "dom"
        ],
        "types": [

        ],
        "esModuleInterop": true,
        "target": "esnext",
        "noImplicitAny": true,
        "downlevelIteration": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "jsx": "react-jsx",
        "allowJs": true
    },
    "include": [
        "src/**/*",
        "node_modules/@types/jest",
        "src/types"
    ]
}
